@model IEnumerable<OnlineJudge.Models.ProblemModel>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Algorithms</title>
    <link href="~/Content/css/bootstrap.css" rel="stylesheet">

    <!-- Custom CSS -->
    <link href="~/Content/css/freelancer.css" rel="stylesheet">

    <!-- Custom Fonts -->
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="http://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet" type="text/css">
</head>
<body id="page-top">
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#page-top">Start Coding</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                @Html.Partial("_LoginOnPartialPage")
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container-fluid -->
    </nav>


    <header style="text-align:left;background-color:white;">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <ol class="breadcrumb myfontfamily">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Algorithms</a></li>
                        <li><a href="#">@ViewBag.kind</a></li>
                    </ol>
                </div>
                
                <div class="col-lg-3">
                    <h4 style="color:black;">@ViewBag.kind</h4>
                </div>





                <div class="col-lg-9">

                    @foreach (var item in Model)
                    {
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <span class="color_alt-green">@Html.ActionLink(@item.Title, "Problem", "Problem", new { problemId = @item.ProblemId }, new { @style = "text-decoration:none;" })</span>
                            </div>
                            <div class="panel-footer" style="background-color:transparent;">
                                <span class="color-alt-grey ">Ratio(AC/submit):</span>
                                <span class="color-alt-black">@item.TotalAcs/@item.TotalSubmissions</span>
                                <span>'  '</span>
                                <span class="color-alt-grey ">Max Score:</span>
                                <span class="color-alt-black">@item.score</span>
                            </div>
                        </div>
                    }
               </div>
            </div>
        </div>
    </header>
</body>
</html>