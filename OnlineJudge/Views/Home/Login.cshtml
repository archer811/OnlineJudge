@model OnlineJudge.Models.LoginAuthorModel
<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <meta name="keywords" content="" />
    <meta name="description" content="" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="~/Content/css/font-awesome.css" rel="stylesheet" type="text/css">
    <link href="~/Content/css/bootstrap.css" rel="stylesheet" type="text/css">
</head>

<body class="templatemo-bg-gray">
    <div class="container">
        <div class="col-md-12">
            <h1 class="margin-bottom-15">Login Form</h1>
            <form class="form-horizontal templatemo-container templatemo-login-form-1 margin-bottom-30" role="form" action="#" method="post">
                <div class="form-group">
                    <div class="col-xs-12">
                        <div class="control-wrapper">
                            <label for="username" class="control-label fa-label"><i class="fa fa-user fa-medium"></i></label>
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "abc@abc.com" })
                                @Html.ValidationMessageFor(model => model.Email)
                            
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="control-wrapper">
                            <label for="password" class="control-label fa-label"><i class="fa fa-lock fa-medium"></i></label>
                            <div  id="password" >
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                        </div>
                    </div>
                </div>
                @*<div class="form-group">
                    <div class="col-md-12">
                        <div class="checkbox control-wrapper">
                            <label>
                                <input type="checkbox"> Remember me
                            </label>
                        </div>
                    </div>
                </div>*@
                
                <div class="form-group">
                    <div class="col-md-12">
                        <div class="control-wrapper">
                            <input type="submit" value="Log in" class="btn btn-info">
                            <div class="text-right pull-right">
                                @Html.ActionLink("Create new account", "Register", "Home");
                            </div>
                            @*<a href="forgot-password.html" class="text-right pull-right">Forgot password?</a>
                            <a href="create-account.html" >Create new account <i class="fa fa-arrow-circle-o-right"></i></a>*@
                        </div>
                    </div>
                </div>

                <hr>
            </form>
            
        </div>
    </div>
</body>
</html>